@model List<CompeteDesk.Models.Strategy>
@{
    ViewData["Title"] = "Strategies";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;

    var q = (string)(ViewBag.Query ?? "");
    var status = (string)(ViewBag.Status ?? "Active");
}

<link rel="stylesheet" href="~/css/strategies.css" asp-append-version="true" />

<div class="cd-strategies">
    <div class="cd-strategies__head card shadow-sm">
        <div class="card-body cd-strategies__headBody">
            <div class="cd-strategies__headLeft">
                <h1 class="cd-h1 mb-1">Strategies</h1>
                <div class="cd-sub">Create, track, and refine your plays (inspired by <em>The 33 Strategies of War</em>).</div>
            </div>

            <div class="cd-strategies__headRight">
                <a class="btn btn-primary cd-btn" asp-action="Create">+ New Strategy</a>
            </div>
        </div>

        <div class="card-body pt-0">
            <div class="cd-strategies__filters">
                <form method="get" class="cd-strategies__filterRow" role="search">
                    <div class="cd-field">
                        <label class="cd-label" for="q">Search</label>
                        <input id="q" name="q" class="form-control cd-input" value="@q" placeholder="Search name, principle, category…" />
                    </div>

                    <div class="cd-field">
                        <label class="cd-label" for="status">Status</label>
                        <select id="status" name="status" class="form-select cd-input">
                            <option value="Active" selected="@(status == "Active")">Active</option>
                            <option value="Archived" selected="@(status == "Archived")">Archived</option>
                        </select>
                    </div>

                    <div class="cd-field cd-field--actions">
                        <label class="cd-label" aria-hidden="true">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary cd-btn" type="submit">Filter</button>
                            <a class="btn btn-outline-secondary cd-btn" asp-action="Index">Reset</a>
                        </div>
                    </div>
                </form>

                @if (Model.Count == 0 && status == "Active")
                {
                    <div class="cd-seed card border-0 shadow-sm">
                        <div class="card-body">
                            <div class="cd-seed__title">No strategies yet.</div>
                            <div class="cd-seed__sub mb-3">You can create your own — or seed the 33 strategy titles as a starting point.</div>
                            <form asp-action="SeedFromBook" method="post" class="d-inline">
                                @Html.AntiForgeryToken()
                                <button class="btn btn-outline-primary cd-btn" type="submit">Seed from book</button>
                            </form>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

    <div class="cd-strategies__grid">
        @foreach (var s in Model)
        {
            <div class="card shadow-sm cd-strategy">
                <div class="card-body">
                    <div class="cd-strategy__top">
                        <div>
                            <div class="cd-strategy__name">@s.Name</div>
                            <div class="cd-strategy__meta">
                                <span class="cd-pill">@(!string.IsNullOrWhiteSpace(s.Category) ? s.Category : "Uncategorized")</span>
                                <span class="cd-dot">•</span>
                                <span class="cd-muted">Priority: @s.Priority</span>
                            </div>
                        </div>

                        <div class="cd-strategy__actions">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@s.Id">View</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@s.Id">Edit</a>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(s.CorePrinciple))
                    {
                        <div class="cd-strategy__principle">@s.CorePrinciple</div>
                    }

                    @if (!string.IsNullOrWhiteSpace(s.Summary))
                    {
                        <div class="cd-strategy__summary">@s.Summary</div>
                    }

                    <div class="cd-strategy__bottom">
                        <div class="cd-muted">@s.SourceBook</div>
                        <a class="cd-link" asp-action="Delete" asp-route-id="@s.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/strategies.js" asp-append-version="true"></script>
}
