@model CompeteDesk.Models.Strategy
@{
    ViewData["Title"] = "New Strategy";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;

    var hasAny = (bool?)(ViewBag.HasAny) == true;
}

<link rel="stylesheet" href="~/css/strategies.css" asp-append-version="true" />

<div class="cd-page">
    <div class="cd-page__head">
        <a class="cd-link" asp-action="Index">‚Üê Back to Strategies</a>
        <h1 class="cd-h1 mb-1">New Strategy</h1>
        <div class="cd-sub">Write a strategy you will actually execute.</div>
    </div>

    @if (!hasAny)
    {
        <div class="alert alert-light border cd-alert">
            Tip: If you want a starting point, go back to the Strategies list and click <strong>Seed from book</strong>.
        </div>
    }

    <div class="card shadow-sm">
        <div class="card-body">
            <form asp-action="Create" method="post">
                @Html.AntiForgeryToken()
                <partial name="_StrategyForm" model="Model" />

                <div class="cd-formActions">
                    <button type="submit" class="btn btn-primary cd-btn">Create</button>
                    <a class="btn btn-outline-secondary cd-btn" asp-action="Index">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
