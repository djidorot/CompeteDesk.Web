@model CompeteDesk.Models.Strategy
@{
    ViewData["Title"] = "Delete Strategy";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
}

<link rel="stylesheet" href="~/css/strategies.css" asp-append-version="true" />

<div class="cd-page">
    <div class="cd-page__head">
        <a class="cd-link" asp-action="Index">‚Üê Back to Strategies</a>
        <h1 class="cd-h1 mb-1">Delete Strategy</h1>
        <div class="cd-sub">This action cannot be undone.</div>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            <div class="alert alert-warning mb-3">
                Are you sure you want to delete <strong>@Model.Name</strong>?
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="cd-formActions">
                    <button type="submit" class="btn btn-danger cd-btn">Delete</button>
                    <a class="btn btn-outline-secondary cd-btn" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>