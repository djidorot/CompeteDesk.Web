@model CompeteDesk.Models.ActionItem
@{
    ViewData["Title"] = "Action Details";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
}

<link rel="stylesheet" href="~/css/actions.css" asp-append-version="true" />

<div class="cd-actions">
    <div class="card shadow-sm">
        <div class="card-body">
            <div class="d-flex align-items-start justify-content-between gap-3 mb-3">
                <div>
                    <h1 class="cd-h1 mb-1">@Model.Title</h1>
                    <div class="cd-sub">@Model.Status • Priority @Model.Priority</div>
                </div>
                <div class="d-flex gap-2">
                    <a class="btn btn-outline-secondary cd-btn" asp-action="Edit" asp-route-id="@Model.Id">Edit</a>
                    <a class="btn btn-outline-secondary cd-btn" asp-action="Index">Back</a>
                </div>
            </div>

            <div class="row g-3">
                <div class="col-md-6">
                    <div class="cd-kv">
                        <div class="cd-kv__k">Category</div>
                        <div class="cd-kv__v">@(!string.IsNullOrWhiteSpace(Model.Category) ? Model.Category : "—")</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cd-kv">
                        <div class="cd-kv__k">Due</div>
                        <div class="cd-kv__v">@(Model.DueAtUtc != null ? Model.DueAtUtc.Value.ToString("yyyy-MM-dd") : "—")</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cd-kv">
                        <div class="cd-kv__k">Workspace ID</div>
                        <div class="cd-kv__v">@(Model.WorkspaceId?.ToString() ?? "—")</div>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="cd-kv">
                        <div class="cd-kv__k">Strategy ID</div>
                        <div class="cd-kv__v">@(Model.StrategyId?.ToString() ?? "—")</div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="cd-kv">
                        <div class="cd-kv__k">Description</div>
                        <div class="cd-kv__v">@(!string.IsNullOrWhiteSpace(Model.Description) ? Model.Description : "—")</div>
                    </div>
                </div>
                <div class="col-12">
                    <div class="cd-muted">Source: @(!string.IsNullOrWhiteSpace(Model.SourceBook) ? Model.SourceBook : "—")</div>
                </div>
            </div>

            <div class="mt-4">
                <a class="cd-link" asp-action="Delete" asp-route-id="@Model.Id">Delete this action</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/actions.js" asp-append-version="true"></script>
}
