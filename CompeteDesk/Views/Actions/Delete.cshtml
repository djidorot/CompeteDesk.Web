@model CompeteDesk.Models.ActionItem
@{
    ViewData["Title"] = "Delete Action";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
}

<link rel="stylesheet" href="~/css/actions.css" asp-append-version="true" />

<div class="cd-actions">
    <div class="card shadow-sm">
        <div class="card-body">
            <h1 class="cd-h1 mb-2">Delete Action</h1>
            <div class="cd-sub mb-3">This cannot be undone.</div>

            <div class="alert alert-danger">
                Are you sure you want to delete <strong>@Model.Title</strong>?
            </div>

            <form asp-action="Delete" method="post">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />

                <div class="d-flex gap-2">
                    <button class="btn btn-danger cd-btn" type="submit">Delete</button>
                    <a class="btn btn-outline-secondary cd-btn" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
