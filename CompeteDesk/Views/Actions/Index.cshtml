@model List<CompeteDesk.Models.ActionItem>
@{
    ViewData["Title"] = "Actions";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;

    var q = (string)(ViewBag.Query ?? "");
    var status = (string)(ViewBag.Status ?? "Planned");
}

<link rel="stylesheet" href="~/css/actions.css" asp-append-version="true" />

<div class="cd-actions">
    <div class="cd-actions__head card shadow-sm">
        <div class="card-body cd-actions__headBody">
            <div class="cd-actions__headLeft">
                <h1 class="cd-h1 mb-1">Actions</h1>
                <div class="cd-sub">Turn strategy into execution: specific tasks, owners, and deadlines.</div>
            </div>

            <div class="cd-actions__headRight">
                <a class="btn btn-primary cd-btn" asp-action="Create">+ New Action</a>
            </div>
        </div>

        <div class="card-body pt-0">
            <div class="cd-actions__filters">
                <form method="get" class="cd-actions__filterRow" role="search">
                    <div class="cd-field">
                        <label class="cd-label" for="q">Search</label>
                        <input id="q" name="q" class="form-control cd-input" value="@q" placeholder="Search title, description, category…" />
                    </div>

                    <div class="cd-field">
                        <label class="cd-label" for="status">Status</label>
                        <select id="status" name="status" class="form-select cd-input">
                            <option value="Planned" selected="@(status == "Planned")">Planned</option>
                            <option value="In Progress" selected="@(status == "In Progress")">In Progress</option>
                            <option value="Done" selected="@(status == "Done")">Done</option>
                            <option value="Archived" selected="@(status == "Archived")">Archived</option>
                        </select>
                    </div>

                    <div class="cd-field cd-field--actions">
                        <label class="cd-label" aria-hidden="true">&nbsp;</label>
                        <div class="d-flex gap-2">
                            <button class="btn btn-outline-secondary cd-btn" type="submit">Filter</button>
                            <a class="btn btn-outline-secondary cd-btn" asp-action="Index">Reset</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <div class="cd-actions__grid">
        @if (Model.Count == 0)
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="cd-muted">No actions found for the current filter.</div>
                </div>
            </div>
        }

        @foreach (var a in Model)
        {
            <div class="card shadow-sm cd-action">
                <div class="card-body">
                    <div class="cd-action__top">
                        <div>
                            <div class="cd-action__title">@a.Title</div>
                            <div class="cd-action__meta">
                                <span class="cd-pill">@(!string.IsNullOrWhiteSpace(a.Category) ? a.Category : "Uncategorized")</span>
                                <span class="cd-dot">•</span>
                                <span class="cd-muted">Priority: @a.Priority</span>
                                @if (a.DueAtUtc != null)
                                {
                                    <span class="cd-dot">•</span>
                                    <span class="cd-muted">Due: @a.DueAtUtc.Value.ToString("yyyy-MM-dd")</span>
                                }
                            </div>
                        </div>

                        <div class="cd-action__actions">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Details" asp-route-id="@a.Id">View</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="Edit" asp-route-id="@a.Id">Edit</a>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(a.Description))
                    {
                        <div class="cd-action__desc">@a.Description</div>
                    }

                    <div class="cd-action__bottom">
                        <div class="cd-muted">@a.Status</div>
                        <a class="cd-link" asp-action="Delete" asp-route-id="@a.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/actions.js" asp-append-version="true"></script>
}
