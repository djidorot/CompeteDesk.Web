@model CompeteDesk.Models.ActionItem

<div class="cd-form">
    <div class="row g-3">
        <div class="col-12">
            <label class="cd-label" asp-for="Title"></label>
            <input class="form-control cd-input" asp-for="Title" placeholder="e.g., Interview 5 customers this week" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="col-12">
            <label class="cd-label" asp-for="Description"></label>
            <textarea class="form-control cd-input" asp-for="Description" rows="5" placeholder="What does done look like? Any notes, links, or stepsâ€¦"></textarea>
            <span class="text-danger" asp-validation-for="Description"></span>
        </div>

        <div class="col-md-6">
            <label class="cd-label" asp-for="Category"></label>
            <input class="form-control cd-input" asp-for="Category" placeholder="e.g., Sales, Product, Marketing" />
        </div>

        <div class="col-md-6">
            <label class="cd-label" asp-for="Status"></label>
            <select class="form-select cd-input" asp-for="Status">
                <option value="Planned">Planned</option>
                <option value="In Progress">In Progress</option>
                <option value="Done">Done</option>
                <option value="Archived">Archived</option>
            </select>
        </div>

        <div class="col-md-4">
            <label class="cd-label" asp-for="Priority"></label>
            <input class="form-control cd-input" asp-for="Priority" type="number" min="0" max="100" />
        </div>

        <div class="col-md-4">
            <label class="cd-label" asp-for="DueAtUtc">Due date (UTC)</label>
            <input class="form-control cd-input" asp-for="DueAtUtc" type="date" />
        </div>

        <div class="col-md-4">
            <label class="cd-label" asp-for="SourceBook"></label>
            <input class="form-control cd-input" asp-for="SourceBook" />
        </div>

        <div class="col-md-6">
            <label class="cd-label" asp-for="WorkspaceId">Workspace ID (optional)</label>
            <input class="form-control cd-input" asp-for="WorkspaceId" type="number" min="1" />
        </div>

        <div class="col-md-6">
            <label class="cd-label" asp-for="StrategyId">Strategy ID (optional)</label>
            <input class="form-control cd-input" asp-for="StrategyId" type="number" min="1" />
        </div>
    </div>
</div>
