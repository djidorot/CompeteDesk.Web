@using Microsoft.AspNetCore.Identity
@using System.Linq
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">

    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <title>@ViewData["Title"] - CompeteDesk</title>
        <script type="importmap"></script>

        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/sidebar.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/topbar.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/css/topbar-ai-search.css" asp-append-version="true" />
        <link rel="stylesheet" href="~/CompeteDesk.styles.css" asp-append-version="true" />

        @* Allow pages to inject page-specific CSS into the HEAD *@
        @RenderSection("Styles", required: false)
    </head>

    <body>
        @{
            var useSidebar = ViewData["UseSidebar"] as bool? == true;
            var containerClass = (ViewData["LayoutFluid"] as bool? == true ? "container-fluid" : "container");

            string roleLabel = "Guest";

            static string PickRoleLabel(System.Collections.Generic.IList<string> roles)
            {
                // Prefer higher-privilege / more specific roles first.
                string[] priority = ["Admin", "Team Lead", "TeamLead", "Manager", "Owner", "User"]; 
                foreach (var p in priority)
                {
                    var hit = roles.FirstOrDefault(r => string.Equals(r, p, System.StringComparison.OrdinalIgnoreCase));
                    if (!string.IsNullOrWhiteSpace(hit)) return hit;
                }
                return roles.FirstOrDefault() ?? "User";
            }

            if (User?.Identity?.IsAuthenticated == true)
            {
                roleLabel = "User";
                var u = await UserManager.GetUserAsync(User);
                if (u != null && UserManager.SupportsUserRole)
                {
                    var roles = await UserManager.GetRolesAsync(u);
                    if (roles != null && roles.Count > 0)
                    {
                        roleLabel = PickRoleLabel(roles);
                    }
                }
            }

            ViewData["TopbarRoleLabel"] = roleLabel;
        }

        @if (!useSidebar)
        {
            <header>
                <nav
                    class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                    <div class="container-fluid">
                        <a class="navbar-brand d-flex align-items-center gap-2" asp-area="" asp-controller="Home"
                            asp-action="Index"><img src="~/images/cd-logo.png" alt="CompeteDesk"
                                style="height:28px;" /><span class="fw-semibold">CompeteDesk</span></a>

                        <button class="navbar-toggler" type="button" data-bs-toggle="collapse"
                            data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false"
                            aria-label="Toggle navigation">
                            <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                            <ul class="navbar-nav flex-grow-1">
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                        asp-action="Index">Home</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Dashboard"
                                        asp-action="Index">Dashboard</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Home"
                                        asp-action="Privacy">Privacy</a>
                                </li>
                                @if (User?.IsInRole("Admin") == true)
                                {
                                    <li class="nav-item">
                                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin"
                                            asp-action="Index">Admin</a>
                                    </li>
                                }
                            </ul>

                            <partial name="_LoginPartial" />
                        </div>
                    </div>
                </nav>
            </header>
        }

        <div class="cd-shell @(useSidebar ? "with-sidebar" : "")">
            @if (useSidebar)
            {
                <partial name="_Sidebar" />
            }

            <div class="cd-shell__content">

                @if (useSidebar)
                {
                    <header class="cd-topbar">
                        <div class="cd-topbar__left">
                            <button class="cd-topbar__iconBtn d-inline-flex d-md-none" type="button" data-cd-sidebar-open
                                aria-label="Open sidebar">
                                <svg viewBox="0 0 24 24" class="cd-topico" fill="none" stroke="currentColor"
                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M4 6h16"></path>
                                    <path d="M4 12h16"></path>
                                    <path d="M4 18h16"></path>
                                </svg>
                            </button>

                            <div class="cd-topbar__search">
                                <svg viewBox="0 0 24 24" class="cd-topico cd-topbar__searchIco" fill="none"
                                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <circle cx="11" cy="11" r="7"></circle>
                                    <path d="M21 21l-4.3-4.3"></path>
                                </svg>
                                <input type="search" id="cdTopbarAiSearch" class="cd-topbar__searchInput" placeholder="Search…"
                                    aria-label="Top search" data-ai-search-url="/api/ai-search" />
                                <div id="cdTopbarAiSearchPanel" class="cd-aiSearchPanel" aria-live="polite" aria-label="AI search results" hidden></div>
                            </div>
                        </div>

                        <div class="cd-topbar__right">
                            <button class="cd-topbar__iconBtn" type="button" aria-label="Notifications">
                                <svg viewBox="0 0 24 24" class="cd-topico" fill="none" stroke="currentColor"
                                    stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                    <path d="M18 8a6 6 0 0 0-12 0c0 7-3 7-3 7h18s-3 0-3-7"></path>
                                    <path d="M13.7 21a2 2 0 0 1-3.4 0"></path>
                                </svg>
                            </button>

                            <div class="cd-topbar__me">
                                <div class="cd-topbar__avatar" aria-hidden="true">
                                    <svg viewBox="0 0 24 24" class="cd-topico" fill="none" stroke="currentColor"
                                        stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                        <path d="M20 21a8 8 0 0 0-16 0"></path>
                                        <circle cx="12" cy="8" r="4"></circle>
                                    </svg>
                                </div>
                                <div class="cd-topbar__meText">
                                    <div class="cd-topbar__meName">@User?.Identity?.Name</div>
                                    <div class="cd-topbar__meSub">@ViewData["TopbarRoleLabel"]</div>
                                </div>
                            </div>
                        </div>
                    </header>
                }

                <div class="@containerClass">
                    <main role="main" class="pb-3">
                        @RenderBody()
                    </main>
                </div>
            </div>
        </div>

        <footer class="border-top footer text-muted">
            <div class="@(ViewData["LayoutFluid"] as bool? == true ? "container-fluid" : "container")">
                &copy; 2026 - CompeteDesk - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>

        <script src="~/lib/jquery/dist/jquery.min.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
        <script src="~/js/site.js" asp-append-version="true"></script>
        <script src="~/js/sidebar.js" asp-append-version="true"></script>
        <script src="~/js/topbar-ai-search.js" asp-append-version="true"></script>

        @RenderSection("Scripts", required: false)
    </body>

</html>