@model CompeteDesk.Models.WarPlan
@{
    ViewData["Title"] = "Delete Plan";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
    ViewBag.Tab = "plans";
}

<link rel="stylesheet" href="~/css/warroom.css" asp-append-version="true" />

<div class="card shadow-sm cd-warform">
    <div class="card-body">
        <h1 class="cd-h1 mb-1">Delete Plan</h1>
        <div class="cd-sub mb-3">This will permanently remove the plan.</div>

        <div class="alert alert-warning">
            <strong>@Model.Name</strong>
            <div class="cd-muted">Status: @Model.Status</div>
        </div>

        <form asp-action="PlanDelete" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <div class="d-flex gap-2">
                <button class="btn btn-danger cd-btn" type="submit">Delete</button>
                <a class="btn btn-outline-secondary cd-btn" asp-action="Index" asp-route-tab="plans">Cancel</a>
            </div>
        </form>
    </div>
</div>