@model CompeteDesk.Models.WarIntel

<div class="row g-3">
    <div class="col-12 col-lg-8">
        <div class="cd-field">
            <label class="cd-label" asp-for="Title">Title</label>
            <input class="form-control cd-input" asp-for="Title" />
            <span class="text-danger" asp-validation-for="Title"></span>
        </div>

        <div class="cd-field">
            <label class="cd-label" asp-for="Subject">Subject</label>
            <input class="form-control cd-input" asp-for="Subject" placeholder="Competitor, customer segment, market, internal…" />
            <span class="text-danger" asp-validation-for="Subject"></span>
        </div>

        <div class="cd-field">
            <label class="cd-label" asp-for="Signal">Signal</label>
            <textarea class="form-control cd-input" asp-for="Signal" rows="4" placeholder="What happened? What did you observe?"></textarea>
            <span class="text-danger" asp-validation-for="Signal"></span>
        </div>

        <div class="cd-field">
            <label class="cd-label" asp-for="Notes">Notes / Implications</label>
            <textarea class="form-control cd-input" asp-for="Notes" rows="5" placeholder="Why does this matter? What might it mean?"></textarea>
            <span class="text-danger" asp-validation-for="Notes"></span>
        </div>
    </div>

    <div class="col-12 col-lg-4">
        <div class="cd-field">
            <label class="cd-label" asp-for="Confidence">Confidence (1-5)</label>
            <select class="form-select cd-input" asp-for="Confidence">
                <option value="1">1 (Low)</option>
                <option value="2">2</option>
                <option value="3">3 (Medium)</option>
                <option value="4">4</option>
                <option value="5">5 (High)</option>
            </select>
            <span class="text-danger" asp-validation-for="Confidence"></span>
        </div>

        <div class="cd-field">
            <label class="cd-label" asp-for="ObservedAtUtc">Observed At (UTC)</label>
            <input type="datetime-local" class="form-control cd-input" asp-for="ObservedAtUtc" />
            <span class="text-danger" asp-validation-for="ObservedAtUtc"></span>
        </div>

        <div class="cd-field">
            <label class="cd-label" asp-for="Source">Source</label>
            <input class="form-control cd-input" asp-for="Source" placeholder="URL, meeting, report, post…" />
            <span class="text-danger" asp-validation-for="Source"></span>
        </div>

        <div class="cd-field">
            <label class="cd-label" asp-for="Tags">Tags</label>
            <input class="form-control cd-input" asp-for="Tags" placeholder="e.g. pricing, hiring, product, ads" />
            <span class="text-danger" asp-validation-for="Tags"></span>
        </div>
    </div>
</div>

<input type="hidden" asp-for="WorkspaceId" />