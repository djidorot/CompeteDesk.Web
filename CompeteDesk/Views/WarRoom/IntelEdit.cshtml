@model CompeteDesk.Models.WarIntel
@{
    ViewData["Title"] = "Edit Intel";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
    ViewBag.Tab = "intel";
}

<link rel="stylesheet" href="~/css/warroom.css" asp-append-version="true" />

<div class="card shadow-sm cd-warform">
    <div class="card-body">
        <h1 class="cd-h1 mb-1">Edit Intel</h1>
        <div class="cd-sub mb-3">Refine your signal: clarify, tag, adjust confidence.</div>

        <form asp-action="IntelEdit" method="post">
            @Html.AntiForgeryToken()
            <input type="hidden" asp-for="Id" />

            <partial name="_IntelForm" model="Model" />

            <div class="d-flex gap-2 mt-3">
                <button class="btn btn-primary cd-btn" type="submit">Save Changes</button>
                <a class="btn btn-outline-secondary cd-btn" asp-action="Index" asp-route-tab="intel">Back</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script src="~/js/warroom.js" asp-append-version="true"></script>
}
