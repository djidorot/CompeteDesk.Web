@model List<CompeteDesk.Models.WarIntel>
@{
    ViewData["Title"] = "War Room";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;

    var q = (string)(ViewBag.Query ?? "");
    ViewBag.Tab = "intel";
}

<link rel="stylesheet" href="~/css/warroom.css" asp-append-version="true" />

<div class="cd-war">
    <div class="cd-war__head card shadow-sm">
        <div class="card-body cd-war__headBody">
            <div>
                <h1 class="cd-h1 mb-1">War Room</h1>
                <div class="cd-sub">Collect intel, craft plans, and stay strategically alert.</div>
            </div>
            <div class="cd-war__headRight">
                <a class="btn btn-primary cd-btn" asp-action="IntelCreate">+ New Intel</a>
            </div>
        </div>

        <div class="card-body pt-0">
            <partial name="_WarRoomTabs" />

            <form method="get" class="cd-war__filterRow" role="search">
                <input type="hidden" name="tab" value="intel" />
                <div class="cd-field">
                    <label class="cd-label" for="q">Search</label>
                    <input id="q" name="q" class="form-control cd-input" value="@q" placeholder="Search title, subject, signal, tags…" />
                </div>
                <div class="cd-field cd-field--actions">
                    <label class="cd-label" aria-hidden="true">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary cd-btn" type="submit">Filter</button>
                        <a class="btn btn-outline-secondary cd-btn" asp-action="Index" asp-route-tab="intel">Reset</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="cd-war__grid">
        @if (Model.Count == 0)
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="cd-muted">No intel entries yet. Add one to start building your awareness map.</div>
                </div>
            </div>
        }

        @foreach (var i in Model)
        {
            <div class="card shadow-sm cd-intel">
                <div class="card-body">
                    <div class="cd-intel__top">
                        <div>
                            <div class="cd-intel__title">@i.Title</div>
                            <div class="cd-intel__meta">
                                <span class="cd-pill">Confidence: @i.Confidence/5</span>
                                @if (!string.IsNullOrWhiteSpace(i.Subject))
                                {
                                    <span class="cd-dot">•</span>
                                    <span class="cd-muted">@i.Subject</span>
                                }
                                @if (i.ObservedAtUtc != null)
                                {
                                    <span class="cd-dot">•</span>
                                    <span class="cd-muted">Observed: @i.ObservedAtUtc.Value.ToString("yyyy-MM-dd")</span>
                                }
                            </div>
                        </div>

                        <div class="cd-intel__actions">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="IntelDetails" asp-route-id="@i.Id">View</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="IntelEdit" asp-route-id="@i.Id">Edit</a>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(i.Signal))
                    {
                        <div class="cd-intel__desc">@i.Signal</div>
                    }

                    <div class="cd-intel__bottom">
                        <div class="cd-muted">
                            @if (!string.IsNullOrWhiteSpace(i.Tags))
                            {
                                <span>Tags: @i.Tags</span>
                            }
                            else
                            {
                                <span>Tags: —</span>
                            }
                        </div>
                        <a class="cd-link" asp-action="IntelDelete" asp-route-id="@i.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/warroom.js" asp-append-version="true"></script>
}
