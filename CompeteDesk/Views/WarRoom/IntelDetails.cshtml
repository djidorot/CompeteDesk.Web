@model CompeteDesk.Models.WarIntel
@{
    ViewData["Title"] = "Intel Details";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
    ViewBag.Tab = "intel";
}

<link rel="stylesheet" href="~/css/warroom.css" asp-append-version="true" />

<div class="card shadow-sm cd-wardetails">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start gap-3">
            <div>
                <h1 class="cd-h1 mb-1">@Model.Title</h1>
                <div class="cd-muted">Confidence: @Model.Confidence/5</div>
            </div>
            <div class="d-flex gap-2">
                <a class="btn btn-outline-secondary cd-btn" asp-action="IntelEdit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-outline-danger cd-btn" asp-action="IntelDelete" asp-route-id="@Model.Id">Delete</a>
            </div>
        </div>

        <hr />

        <div class="row g-3">
            <div class="col-12 col-lg-8">
                <div class="cd-kv">
                    <div class="cd-k">Signal</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Signal) ? Model.Signal : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Notes / Implications</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Notes) ? Model.Notes : "—")</div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="cd-kv">
                    <div class="cd-k">Subject</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Subject) ? Model.Subject : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Observed At (UTC)</div>
                    <div class="cd-v">@(Model.ObservedAtUtc != null ? Model.ObservedAtUtc.Value.ToString("yyyy-MM-dd HH:mm") : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Source</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Source) ? Model.Source : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Tags</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Tags) ? Model.Tags : "—")</div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <a class="btn btn-outline-secondary cd-btn" asp-action="Index" asp-route-tab="intel">Back to Intel</a>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/warroom.js" asp-append-version="true"></script>
}