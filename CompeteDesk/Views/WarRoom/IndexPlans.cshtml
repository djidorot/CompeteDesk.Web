@model List<CompeteDesk.Models.WarPlan>
@{
    ViewData["Title"] = "War Room";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;

    var q = (string)(ViewBag.Query ?? "");
    ViewBag.Tab = "plans";
}

<link rel="stylesheet" href="~/css/warroom.css" asp-append-version="true" />

<div class="cd-war">
    <div class="cd-war__head card shadow-sm">
        <div class="card-body cd-war__headBody">
            <div>
                <h1 class="cd-h1 mb-1">War Room</h1>
                <div class="cd-sub">Turn intelligence into operational plans and contingencies.</div>
            </div>
            <div class="cd-war__headRight">
                <a class="btn btn-primary cd-btn" asp-action="PlanCreate">+ New Plan</a>
            </div>
        </div>

        <div class="card-body pt-0">
            <partial name="_WarRoomTabs" />

            <form method="get" class="cd-war__filterRow" role="search">
                <input type="hidden" name="tab" value="plans" />
                <div class="cd-field">
                    <label class="cd-label" for="q">Search</label>
                    <input id="q" name="q" class="form-control cd-input" value="@q" placeholder="Search name, objective, approach, status…" />
                </div>
                <div class="cd-field cd-field--actions">
                    <label class="cd-label" aria-hidden="true">&nbsp;</label>
                    <div class="d-flex gap-2">
                        <button class="btn btn-outline-secondary cd-btn" type="submit">Filter</button>
                        <a class="btn btn-outline-secondary cd-btn" asp-action="Index" asp-route-tab="plans">Reset</a>
                    </div>
                </div>
            </form>
        </div>
    </div>

    <div class="cd-war__grid">
        @if (Model.Count == 0)
        {
            <div class="card shadow-sm">
                <div class="card-body">
                    <div class="cd-muted">No plans found. Create a plan to capture objectives, risks, and contingencies.</div>
                </div>
            </div>
        }

        @foreach (var p in Model)
        {
            <div class="card shadow-sm cd-plan">
                <div class="card-body">
                    <div class="cd-plan__top">
                        <div>
                            <div class="cd-plan__title">@p.Name</div>
                            <div class="cd-plan__meta">
                                <span class="cd-pill">@p.Status</span>
                                @if (p.StartAtUtc != null)
                                {
                                    <span class="cd-dot">•</span>
                                    <span class="cd-muted">Start: @p.StartAtUtc.Value.ToString("yyyy-MM-dd")</span>
                                }
                                @if (p.EndAtUtc != null)
                                {
                                    <span class="cd-dot">•</span>
                                    <span class="cd-muted">End: @p.EndAtUtc.Value.ToString("yyyy-MM-dd")</span>
                                }
                            </div>
                        </div>

                        <div class="cd-plan__actions">
                            <a class="btn btn-sm btn-outline-secondary" asp-action="PlanDetails" asp-route-id="@p.Id">View</a>
                            <a class="btn btn-sm btn-outline-secondary" asp-action="PlanEdit" asp-route-id="@p.Id">Edit</a>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(p.Objective))
                    {
                        <div class="cd-plan__desc">@p.Objective</div>
                    }

                    <div class="cd-plan__bottom">
                        <div class="cd-muted">@(!string.IsNullOrWhiteSpace(p.SourceBook) ? p.SourceBook : "—")</div>
                        <a class="cd-link" asp-action="PlanDelete" asp-route-id="@p.Id">Delete</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

@section Scripts {
    <script src="~/js/warroom.js" asp-append-version="true"></script>
}
