@model CompeteDesk.Models.WarPlan
@{
    ViewData["Title"] = "Plan Details";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
    ViewBag.Tab = "plans";
}

<link rel="stylesheet" href="~/css/warroom.css" asp-append-version="true" />

<div class="card shadow-sm cd-wardetails">
    <div class="card-body">
        <div class="d-flex justify-content-between align-items-start gap-3">
            <div>
                <h1 class="cd-h1 mb-1">@Model.Name</h1>
                <div class="cd-muted">Status: @Model.Status</div>
            </div>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-primary cd-btn" type="button" data-war-ai-redteam-btn data-plan-id="@Model.Id">AI Red-Team</button>
                <a class="btn btn-outline-secondary cd-btn" asp-action="PlanEdit" asp-route-id="@Model.Id">Edit</a>
                <a class="btn btn-outline-danger cd-btn" asp-action="PlanDelete" asp-route-id="@Model.Id">Delete</a>
            </div>
        </div>

        <hr />

        <div class="row g-3">
            <div class="col-12 col-lg-8">
                <div class="cd-kv">
                    <div class="cd-k">Objective</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Objective) ? Model.Objective : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Approach</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Approach) ? Model.Approach : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Assumptions</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Assumptions) ? Model.Assumptions : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Risks</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Risks) ? Model.Risks : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Contingencies</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.Contingencies) ? Model.Contingencies : "—")</div>
                </div>
            </div>

            <div class="col-12 col-lg-4">
                <div class="cd-kv">
                    <div class="cd-k">Start (UTC)</div>
                    <div class="cd-v">@(Model.StartAtUtc != null ? Model.StartAtUtc.Value.ToString("yyyy-MM-dd") : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">End (UTC)</div>
                    <div class="cd-v">@(Model.EndAtUtc != null ? Model.EndAtUtc.Value.ToString("yyyy-MM-dd") : "—")</div>
                </div>

                <div class="cd-kv">
                    <div class="cd-k">Source</div>
                    <div class="cd-v">@(!string.IsNullOrWhiteSpace(Model.SourceBook) ? Model.SourceBook : "—")</div>
                </div>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <a class="btn btn-outline-secondary cd-btn" asp-action="Index" asp-route-tab="plans">Back to Plans</a>
        </div>

        <form class="d-none" data-war-ai-token method="post">
            @Html.AntiForgeryToken()
        </form>
    </div>
</div>

<div class="modal fade" id="warAiModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg modal-dialog-scrollable">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="warAiModalTitle">AI</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="cd-war-ai" id="warAiModalBody">
                    <div class="cd-muted">Preparing…</div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-outline-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/js/warroom.js" asp-append-version="true"></script>
}
