@model IReadOnlyList<CompeteDesk.Models.Workspace>
@{
    ViewData["Title"] = "Workspaces";
    ViewData["LayoutFluid"] = true;
    ViewData["UseSidebar"] = true;
}

<link rel="stylesheet" href="~/css/workspaces.css" asp-append-version="true" />

<div class="cd-page">
    <div class="cd-page__head">
        <div>
            <h1 class="cd-page__title">Workspaces</h1>
            <p class="cd-page__sub">Your workspaces are the top-level containers for strategies and execution.</p>
        </div>
        <a class="btn btn-primary" asp-action="Create">New Workspace</a>
    </div>

    @if (Model == null || Model.Count == 0)
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <p class="mb-0">No workspaces yet. Create one to get started.</p>
            </div>
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="list-group">
                    @foreach (var ws in Model)
                    {
                        <div class="list-group-item">
                            <div class="d-flex justify-content-between align-items-start gap-3">
                                <div>
                                    <div class="fw-semibold">@ws.Name</div>
                                    @if (!string.IsNullOrWhiteSpace(ws.Description))
                                    {
                                        <div class="text-muted">@ws.Description</div>
                                    }
                                </div>
                                <div class="text-muted small">Created @ws.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd")</div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
